{
    "manifest_version": 2,
    "name": "Playback Speed Time Calculator for YouTube",
    "version": "0.0.0.1",
    "description": "Display the time saved by speeding up video playback",
    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/*"],
            "js": ["content-script.js"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": ["youtube-script.js"],
    "permissions": [
        "*://www.youtube.com/*"
    ]
}

