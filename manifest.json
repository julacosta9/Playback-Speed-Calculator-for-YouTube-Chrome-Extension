{
    "manifest_version": 2,
    "name": "YouTube Time Save Calculator",
    "options_page": "html/options.html",
    "version": "1.0",
    "description": "Display the time saved by speeding up video playback",
    // "background": {
    //     "persistent": false,
    //     "scripts": ["background.js"]
    // },
    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/*"],
            "js": ["timeSaveCalculation.js"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": ["script.js"],
    "permissions": [
        "activeTab",
        "declarativeContent",
        "webNavigation",
        "*://www.youtube.com/*",
        "tabs"
    ],
    "page_action": {
        "default_popup": "html/popup.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        },
        "icons": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    }
}

